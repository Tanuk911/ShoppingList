<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/view_list_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/view_list_txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.3"
            android:paddingVertical="5dp"
            android:text="List"
            android:textSize="40sp" />

        <Button
            android:id="@+id/view_list_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            android:background="@drawable/baseline_backspace_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_list_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/view_list_linear">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="Date: " />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="Location: " />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_list_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/view_list_linear1">

        <TextView
            android:id="@+id/view_list_txtDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="DD/MM/YYYY" />

        <TextView
            android:id="@+id/view_list_txtLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="Location" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_list_linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@+id/view_list_linear2">

        <TextView
            android:id="@+id/view_list_txtListItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:padding="5dp" />

        <TextView
            android:id="@+id/view_list_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_list_linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@id/view_list_linear3">

        <EditText
            android:id="@+id/view_list_edtxtNewList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:hint="Product Name"/>

        <EditText
            android:id="@+id/view_list_edtxtRemoveItemNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.2"
            android:inputType="number"
            android:hint="Enter Item #"/>

        <EditText
            android:id="@+id/view_list_edtxtAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:inputType="numberDecimal"
            android:hint="Qty"/>

        <Spinner
            android:id="@+id/view_list_spinnerUnits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4" />

        <Button
            android:id="@+id/view_list_btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:background="@drawable/baseline_add_24" />

        <Button
            android:id="@+id/view_list_btnMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:background="@drawable/baseline_delete_forever_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_list_linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3.2"
        app:layout_constraintTop_toBottomOf="@+id/view_list_linear4">

        <Button
            android:id="@+id/view_list_btnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Edit" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <Button
            android:id="@+id/view_list_btnConfrim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Confirm" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>